body {
  background: #f1f5f6 url(<%= asset_path "bg2.jpg" %>);
}

label {
  color: black;
}

[type="radio"]:not(:checked) + label, [type="radio"]:checked + label {
  padding-left: 25px;
  padding-right: 20px;
}

[type="checkbox"] + label {
  padding-left: 25px;
  padding-right: 20px;
}

#header {
  background-image: url(<%= asset_path "concert.jpg" %>) !important;
  background-position: center center;
  /*background-size: auto 100%;*/
  background-repeat: no-repeat;
  height: 200px;
  text-align: center;
}