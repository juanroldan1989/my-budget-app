<% collection.in_groups_of(3).each do |group| %>
  <div class="row">
    <% group.each do |event| %>
      <% if event.present? %>
        <div class="col s12 m6 l4">
          <div class="card">
            <div class="card-image">
              <img
                style="object-fit:cover;" height="150"
                src="<%= event[:image_urls].first %>">
            </div>
            <div class="card-content">
              <span class="card-title"><%= event[:title] %></span>
              <p><b><%= event[:full_price] %></b></p>
              <p><%= event[:description] %></p>
            </div>
            <div class="card-action">
              <%= link_to "More info", event[:links].first, target: "blank" %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
